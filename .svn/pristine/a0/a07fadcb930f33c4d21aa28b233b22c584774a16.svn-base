<div data-dojo-type="dijit/ContentPane">
	<div data-dojo-type="dijit/layout/ContentPane">
        <table style="padding: 10px;">
            <tr>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span>Название:</span>
                    </div>
                </td>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span>${response.data.name}</span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span>Вопрос:</span>
                    </div>
                </td>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span>${response.data.parent.name}</span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span>Верный ответ:</span>
                    </div>
                </td>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span data-dojo-attach-point='valid'>${response.data.valid}</span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div data-dojo-type="dijit/layout/ContentPane">
                        <span>Описание:</span>
                    </div>
                </td>
                <td>
                    <span>${response.data.description}</span>
                </td>
            </tr>
        </table>
	</div>
</div>